<!DOCTYPE html>
<html class=''>
<head>
    <!-- <link rel='stylesheet prefetch' href='reset.css'> -->
    <link rel='stylesheet prefetch' href='/font-awesome.css'>
    <link href="/bootstrap/bootstrap.css" rel="stylesheet" id="bootstrap-css">
    <script src="/bootstrap/bootstrap.js"></script>
    <script src="/jquery.min.js"></script>
    <title>Login - Webchat Incognito</title>
</head>
    <div id="main">
        <div class="form-login">
            <form action="/login" method="post" name="login" id="formLogin">
                <div>
                    <input id="name" name="name" type="text" placeholder="Enter_your_name"/>
                </div>
                    <input id="room" name="room" type="text" placeholder="Enter_room_name" style="display: inline-block;"/>
                </div>
            </form>
        </div>
        <div class="btn-login" id="login">
            <p id="txt-login">JOIN CHAT</p>
        </div>
    </div>
</script>

<style>
@import url('/Turbo Pascal Font.ttf');

#room {
    font-family: 'Turbo Pascal Font',sans-serif;
    font-size: 40px;
    margin-top: 30px;
    text-align: center;
    background-color: #2F3E4E;
    border: none;
    color: white;
}

#name {
    font-family: 'Turbo Pascal Font',sans-serif;
    font-size: 40px;
    text-align: center;
    background-color: #2F3E4E;
    border: none;
    color: white;
}
.form-login {
    top: 30%;
    width: 100%;
    text-align: center;
    position: fixed;
}
.btn-login {
    top: 50%;
    font-family: 'Turbo Pascal Font',sans-serif;
    width: 100%;
    text-align: center;
    position: fixed;
    color: white;
}

#txt-login {
    color: white;
    margin-left: auto;
    margin-right: auto;
    padding: 20px;
    width: 150px;
    background: rgb(58, 95, 134);
}
html {
    width: 100%; height: 100%; background-color: #2F3E4E; margin: auto;
}
</style>

<script>

$("#login").click(function() {
      var form = $("#formLogin");
      var url = form.attr('action');

      $.ajax({
            type: "POST",
            url: url,
            data: form.serialize(),
            success: function(data)
            {
              if (data == "success") {
                window.location.replace(window.location.href);
                return;
              }
            }
          });
});

var url = window.location.href;
url = url.replace(/^.*\/\/[^\/]+/, '').substr(3);;
console.log(url);
$("#room").val(url);
</script>
</body></html>